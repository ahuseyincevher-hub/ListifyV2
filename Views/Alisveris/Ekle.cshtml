@model web_uyg.Models.AlisverisUrunu

@{
    ViewData["Title"] = "Ürün Ekle";
    var listeId = ViewBag.ListeId as int? ?? 0;
}

<div class="container">
    <div class="page-header">
        <div class="page-title-section">
            <h1 class="page-title">
                <i class="fas fa-plus-circle"></i>
                Ürün Ekle
            </h1>
            <p class="page-subtitle">Alışveriş listenize yeni ürün ekleyin</p>
        </div>
        <a asp-action="Index" asp-route-listeId="@listeId" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i>
            Listeye Dön
        </a>
    </div>

    <div class="form-container">
        <form asp-action="Ekle" method="post" id="urunForm" class="product-form">
            <div asp-validation-summary="All" class="alert alert-danger">
                <h5 class="alert-heading"><i class="fas fa-exclamation-triangle"></i> Ürün Ekle</h5>
            </div>
            
            <input type="hidden" asp-for="ListeId" />
            
            <div class="form-section">
                <h3 class="form-section-title">
                    <i class="fas fa-info-circle"></i>
                    Temel Bilgiler
                </h3>
                
                <div class="form-grid">
                    <div class="form-group">
                        <label asp-for="UrunAdi" class="form-label">
                            <i class="fas fa-tag"></i>
                            Ürün Adı
                        </label>
                        <input asp-for="UrunAdi" class="form-control" placeholder="Örn: Süt" required autofocus />
                        <span asp-validation-for="UrunAdi" class="field-validation-error"></span>
                    </div>
                    
                    <div class="form-group">
                        <label asp-for="KategoriId" class="form-label">
                            <i class="fas fa-folder"></i>
                            Kategori
                        </label>
                        <select asp-for="KategoriId" class="form-select" asp-items="ViewBag.Kategoriler">
                            <option value="">Kategori Seçiniz</option>
                        </select>
                    </div>
                </div>
            </div>
            
            <div class="form-section">
                <h3 class="form-section-title">
                    <i class="fas fa-calculator"></i>
                    Miktar ve Fiyat
                </h3>
                
                <div class="form-grid">
                    <div class="form-group">
                        <label asp-for="Miktar" class="form-label">
                            <i class="fas fa-hashtag"></i>
                            Miktar
                        </label>
                        <input asp-for="Miktar" class="form-control" type="number" min="1" value="1" required />
                        <span asp-validation-for="Miktar" class="field-validation-error"></span>
                    </div>
                    
                    <div class="form-group">
                        <label asp-for="MiktarBirimi" class="form-label">
                            <i class="fas fa-balance-scale"></i>
                            Birim
                        </label>
                        <select asp-for="MiktarBirimi" class="form-select">
                            <option value="Adet">Adet</option>
                            <option value="Kg">Kg</option>
                            <option value="Gram">Gram</option>
                            <option value="Lt">Litre</option>
                            <option value="Ml">Mililitre</option>
                            <option value="Paket">Paket</option>
                            <option value="Demet">Demet</option>
                            <option value="Kutu">Kutu</option>
                            <option value="Şişe">Şişe</option>
                            <option value="Tane">Tane</option>
                        </select>
                    </div>
                    
                    <div class="form-group">
                        <label asp-for="Fiyat" class="form-label">
                            <i class="fas fa-lira-sign"></i>
                            Fiyat (₺)
                        </label>
                        <input asp-for="Fiyat" class="form-control" type="number" step="0.01" min="0" placeholder="0.00" />
                        <span asp-validation-for="Fiyat" class="field-validation-error"></span>
                    </div>
                </div>
            </div>
            
            <div class="form-section">
                <h3 class="form-section-title">
                    <i class="fas fa-edit"></i>
                    Detaylar
                </h3>
                
                <div class="form-group">
                    <label asp-for="ResimUrl" class="form-label">
                        <i class="fas fa-image"></i>
                        Resim URL
                    </label>
                    <input asp-for="ResimUrl" class="form-control" placeholder="https://example.com/resim.jpg" />
                    <small class="form-text">Ürün resmi için URL girin (opsiyonel)</small>
                </div>
                
                <div class="form-group">
                    <label asp-for="Not" class="form-label">
                        <i class="fas fa-sticky-note"></i>
                        Not
                    </label>
                    <textarea asp-for="Not" class="form-control" rows="3" placeholder="Özel notlarınızı buraya yazın..."></textarea>
                </div>
            </div>
            
            <div class="form-actions">
                <button type="submit" class="btn btn-primary btn-lg" id="kaydetBtn">
                    <i class="fas fa-save"></i>
                    Ürün Ekle
                </button>
                <a asp-action="Index" asp-route-listeId="@listeId" class="btn btn-outline btn-lg">
                    <i class="fas fa-times"></i>
                    İptal
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        $(document).ready(function() {
            $('#urunForm').on('submit', function(e) {
                if ($(this).valid()) {
                    const btn = $('#kaydetBtn');
                    btn.prop('disabled', true);
                    btn.html('<i class="fas fa-spinner fa-spin"></i> Kaydediliyor...');
                    return true;
                }
                return true;
            });
        });
    </script>
}
