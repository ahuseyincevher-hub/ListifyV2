@model web_uyg.Models.FavoriUrun

@{
    ViewData["Title"] = "Favori Ürün Ekle";
}

<div class="container py-4">
    <div class="page-header">
        <div class="page-title-section">
            <h1 class="page-title">
                <i class="fas fa-star"></i>
                Favori Ürün Ekle
            </h1>
            <p class="page-subtitle">Sık kullandığınız ürünleri favorilere ekleyin</p>
        </div>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i>
            Listeye Dön
        </a>
    </div>

    <div class="form-container">
        <form asp-action="Ekle" method="post" class="product-form">
            <div asp-validation-summary="All" class="alert alert-danger"></div>
            
            <div class="form-section">
                <h3 class="form-section-title">
                    <i class="fas fa-info-circle"></i>
                    Temel Bilgiler
                </h3>
                
                <div class="form-grid">
                    <div class="form-group">
                        <label asp-for="UrunAdi" class="form-label">
                            <i class="fas fa-tag"></i>
                            Ürün Adı
                        </label>
                        <input asp-for="UrunAdi" class="form-control" placeholder="Örn: Süt" required autofocus />
                        <span asp-validation-for="UrunAdi" class="field-validation-error"></span>
                    </div>
                    
                    <div class="form-group">
                        <label asp-for="VarsayilanMiktar" class="form-label">
                            <i class="fas fa-hashtag"></i>
                            Varsayılan Miktar
                        </label>
                        <input asp-for="VarsayilanMiktar" class="form-control" type="number" min="1" value="1" required />
                        <span asp-validation-for="VarsayilanMiktar" class="field-validation-error"></span>
                    </div>
                </div>
            </div>
            
            <div class="form-actions">
                <button type="submit" class="btn btn-primary btn-lg">
                    <i class="fas fa-plus"></i>
                    Favorilere Ekle
                </button>
                <a asp-action="Index" class="btn btn-outline btn-lg">
                    <i class="fas fa-times"></i>
                    İptal
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
